#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit quality gates
# Runs checks only for staged files in each area

set -e

cd "$(git rev-parse --show-toplevel)"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Track failures
FAILED=0

log_info() { printf "${BLUE}â†’${NC} %s\n" "$1"; }
log_success() { printf "${GREEN}âœ“${NC} %s\n" "$1"; }
log_warn() { printf "${YELLOW}âš ${NC} %s\n" "$1"; }
log_error() { printf "${RED}âœ—${NC} %s\n" "$1"; FAILED=1; }

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Check if any files match a pattern
has_staged_files() {
  echo "$STAGED_FILES" | grep -q "^$1" 2>/dev/null
}

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "  Pre-commit Quality Gates"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Frontend Checks
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if has_staged_files "apps/frontend/"; then
  echo ""
  echo "${BLUE}ğŸ“¦ Frontend${NC}"
  
  log_info "Linting..."
  if pnpm --filter frontend lint --quiet 2>/dev/null; then
    log_success "ESLint passed"
  else
    log_error "ESLint failed â€” run: pnpm --filter frontend lint:fix"
  fi
  
  log_info "Formatting..."
  if pnpm --filter frontend format:check 2>/dev/null; then
    log_success "Prettier passed"
  else
    log_error "Prettier failed â€” run: pnpm --filter frontend format"
  fi
  
  log_info "Type checking..."
  if pnpm --filter frontend tsc --noEmit 2>/dev/null; then
    log_success "TypeScript passed"
  else
    log_error "TypeScript failed"
  fi
  
  log_info "Building..."
  if pnpm --filter frontend build >/dev/null 2>&1; then
    log_success "Build passed"
  else
    log_error "Build failed"
  fi
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Agent Checks
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if has_staged_files "apps/agent/"; then
  echo ""
  echo "${BLUE}ğŸ Agent${NC}"
  
  cd apps/agent
  
  # Determine ruff command (prefer uv run for project environment)
  if command -v uv >/dev/null 2>&1; then
    RUFF_CMD="uv run ruff"
    PYTEST_CMD="uv run pytest"
    MYPY_CMD="uv run mypy"
  elif command -v ruff >/dev/null 2>&1; then
    RUFF_CMD="ruff"
    PYTEST_CMD="pytest"
    MYPY_CMD="mypy"
  else
    RUFF_CMD=""
  fi
  
  if [ -n "$RUFF_CMD" ]; then
    log_info "Linting..."
    if $RUFF_CMD check . --quiet 2>/dev/null; then
      log_success "Ruff lint passed"
    else
      log_error "Ruff lint failed â€” run: cd apps/agent && uv run ruff check . --fix"
    fi
    
    log_info "Formatting..."
    if $RUFF_CMD format --check . 2>/dev/null; then
      log_success "Ruff format passed"
    else
      log_error "Ruff format failed â€” run: cd apps/agent && uv run ruff format ."
    fi
  else
    log_warn "Neither uv nor ruff installed â€” skipping (CI will enforce)"
  fi
  
  # Type check (optional)
  if [ -n "$MYPY_CMD" ]; then
    log_info "Type checking..."
    if $MYPY_CMD src --ignore-missing-imports --no-error-summary 2>/dev/null; then
      log_success "mypy passed"
    else
      log_warn "mypy had issues (non-blocking)"
    fi
  fi
  
  # Tests
  if [ -d "tests" ] && [ "$(find tests -name '*.py' -type f 2>/dev/null | wc -l)" -gt 0 ]; then
    log_info "Testing..."
    if [ -n "$PYTEST_CMD" ] && $PYTEST_CMD tests/ -q --tb=no 2>/dev/null; then
      log_success "Tests passed"
    else
      log_error "Tests failed"
    fi
  else
    log_warn "No tests found"
  fi
  
  cd ../..
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Database Checks
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if has_staged_files "supabase/migrations/"; then
  echo ""
  echo "${BLUE}ğŸ—„ï¸  Database${NC}"
  
  # Check RLS on new tables
  for file in $(echo "$STAGED_FILES" | grep "^supabase/migrations/.*\.sql$"); do
    if grep -qi "create table" "$file" 2>/dev/null; then
      if ! grep -qi "enable row level security" "$file" 2>/dev/null; then
        log_error "Missing RLS in $file"
      else
        log_success "RLS enabled in $(basename "$file")"
      fi
    fi
  done
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Summary
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

if [ $FAILED -eq 1 ]; then
  echo "${RED}  âœ— Pre-commit checks failed${NC}"
  echo ""
  echo "  Fix errors above or skip with: git commit --no-verify"
  echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
  exit 1
fi

echo "${GREEN}  âœ“ All checks passed${NC}"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""
