{
  "name": "deep-research-app",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:agent": "cd apps/agent && langgraph dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:agent\"",
    "build": "pnpm --filter frontend build",
    "lint": "pnpm --filter frontend lint",
    "lint:agent": "cd apps/agent && ruff check . && ruff format --check .",
    "lint:all": "pnpm lint && pnpm lint:agent",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:agent": "cd apps/agent && ruff format .",
    "test": "pnpm test:frontend && pnpm test:agent",
    "test:frontend": "pnpm --filter frontend test 2>/dev/null || echo '⚠️  Frontend tests not configured'",
    "test:agent": "cd apps/agent && pytest tests/ -v 2>/dev/null || echo '⚠️  Agent tests not configured'",
    "test:all": "pnpm test:frontend && pnpm test:agent",
    "prepare": "husky install",
    "pre-commit": "bash .husky/pre-commit"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^8.0.0",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
