{
  "name": "orderly-industry",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:agent": "cd apps/agent && . .venv/bin/activate && langgraph dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:agent\"",
    "build": "pnpm --filter frontend build",
    "lint": "pnpm --filter frontend lint",
    "lint:agent": "cd apps/agent && ruff check . && ruff format --check .",
    "lint:all": "pnpm lint && pnpm lint:agent",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:agent": "cd apps/agent && ruff format .",
    "format:all": "pnpm format && pnpm format:agent",
    "typecheck": "pnpm --filter frontend tsc --noEmit",
    "test": "pnpm --filter frontend test",
    "test:agent": "cd apps/agent && pytest tests/ -v",
    "test:all": "pnpm test && pnpm test:agent",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^8.0.0",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
